<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- App Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register your vehicle. Prevent wrong parking.”"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Motivational Quote -->
    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="“Fix parking issues in a single scan.”"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="#555555"
        android:gravity="center"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Car Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/carCard"
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:layout_marginTop="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="18dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvQuote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/vehicleAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:src="@drawable/car"
            android:scaleType="centerInside"/>
    </androidx.cardview.widget.CardView>
    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/carCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAddVehicle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Add Vehicle"
            android:textColor="@android:color/white"
            android:backgroundTint="#3A6EA5"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Scan QR"
            android:textColor="@android:color/white"
            android:backgroundTint="#4FA3D1"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sectionTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/actionButtons">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#3A6EA5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Registered Vehicles"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:textColor="#212121"/>

        <Button
            android:id="@+id/btnLogout"
            android:text="Logout"
            android:backgroundTint="#E42020"
            android:layout_marginStart="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVehicles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/sectionTitleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

